var form = $('#new_answer'),
    alert = form.find('#error_validation');



container = $('.attachment-nested .nested-fields');

<% if @answer.errors.any? %>
  alert.remove();
  form.prepend('<%= j render 'layouts/shared/error_form', object: @answer %>');
  console.log(container);
<% else %>
  alert.remove();
  $('#answersList').append('<%= j render @answer %>');

  form.find('#answer_body').val('');

  container.hide();

  $("#headerFlash").html("<%=j render 'layouts/shared/error_messages' %>");

  form.reset();
<% end %>

