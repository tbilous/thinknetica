$('#answersList').html('<%= j render @answer.question.answers %>');
var message,
    color;

<% if flash[:success] %>
  message = "<%=j flash[:success] %>";
  color = 'green';
  alertFunc(message, color);

<% elsif flash[:error]  %>
  color = 'red';
  message = "<%=j flash[:success] %>";
  Materialize.toast(message, 4000, 'red');
<% end %>
