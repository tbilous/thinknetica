var form = $('#answer-form' + '<%= @answer.id %>'),
    message,
    color;

<% if @answer.errors.present? %>
  color = 'red';

  <% @answer.errors.each do |field, msg| %>
    message = "<%= j msg %>";
  alertFunc(message, color);
  <% end %>
<% else %>
$('#answer-' + <%= @answer.id %>).replaceWith(
    "<div class='answer-rendered'><%= j render partial: 'answers/answer_l_line', locals: {object: @answer}%></div>");
  message = "<%=j flash[:success] %>";
  color = 'green';
  alertFunc(message, color);

$(form).toggleClass('hidden');

<% end %>

