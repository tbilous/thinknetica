var form = $('#question_form' + '<%= @question.id %>');
var target = $('#question-' + <%= @question.id %> + ' ' + '.question-rendered');
var message, color;

<% if @question.errors.present? %>
  color = 'red';

  <% @question.errors.each do |field, msg| %>
  message = "<%= j msg %>";
  alertFunc(message, color);
<% end %>

<% else %>

  $(target).html("<%= j render 'question_l_line' %></div>");

  <% if flash[:notice].present? %>
    message = "<%=j flash[:notice] %>";
    color = 'green';
    alertFunc(message, color);
  <% end %>


//hide form
  $('#question_form-edit-wrapper').toggleClass('hidden');

//remove alert
  $("form .alert").remove();
  $('#question_form-edit-wrapper').toggle();

//  ItemToggle($('.script-item-toggle'));

<% end %>

