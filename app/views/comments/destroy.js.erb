$("#comment-<%= @comment.id %>").remove();
var message, color;

<% if flash[:notice] %>
  message = "<%=j flash[:notice] %>";
  color = 'green';
  alertFunc(message, color);
  debugger;

<% elsif flash[:alert]  %>
  color = 'red';
  message = "<%=j flash[:alert] %>";
  Materialize.toast(message, 4000, 'red');
  debugger;
<% end %>
